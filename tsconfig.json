{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "removeComments": false,
        "rootDirs": ["./src"],
        "baseUrl": "./src",
        "paths": {
            "@components/*": ["components/*"],
            "@assest/*": ["assest/*"],
            "@styles/*": ["styles/*"],
            "@containers/*": ["containers/*"],
            "@constants/*": ["constants/*"],
            "@stores/*": ["stores/*"],
            "@utils/*": ["utils/*"],
            "@creators/*": ["creators/*"],
            "@mock/*": ["mock/*"],
            "@middlewares/*": ["middlewares/*"]
        },
        "jsx": "react",
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "importHelpers": true,
        "experimentalDecorators": true,
        "lib": ["es7", "dom"],
        "skipLibCheck": true,
        "typeRoots": ["node", "node_modules/@types", "./typings"]
    },
    "include": [
        "./src",
        "./typings"
    ],
    "exclude": [
        "./src/sw.ts",
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts",
        "./src/**/*.scss.d.ts"
    ]
}
